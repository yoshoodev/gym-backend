// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserTypes {
    MEMBER
    TRAINER
    OWNER
    ADMIN
}

enum Countries {
    RO
}

model Member {
    id Int @id @default(uuid())
    role UserTypes @default(MEMBER)
    email String
    name String?
    surname String?
    country Countries? @default(RO)
    phoneNumber String?
    //Gym data
    branch Branch? @relation(fields: [branchId], references: [id])
    branchId Int?
    //ADDRESS
    street String?
    number String?
    city String?
    country Countries? @default(RO)
    postalCode String?
}

model Gym {
    id Int @id @default(uuid())
    name String
    branches Branch[]
    country Countries? @default(RO)
}

model Branch {
    id Int @id @default(uuid())
    gym Gym @relation(fields: [gymId], references: [id])
    gymId Int
    name String
    members Member[]
    //ADDRESS
    phoneNumber String?
    street String?
    number String?
    city String?
    country Countries? @default(RO)
    postalCode String?
}

